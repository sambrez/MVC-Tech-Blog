<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TECH BLOG</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <header class="display-flex justify-space-between align-center p-2">
      <div>
        <nav>
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <!-- Only display the logout link if the user is logged in -->
          {{#if logged_in}}
            <a href="/">Logout</a>
          {{else}}
          {{!-- if not logged in display the login link --}}
            <a href="/login">Login</a>
          {{/if}}
        </nav>
      </div>
      <h1>TECH BLOG</h1>
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>

    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>